    <style>
        body {
            font-family: 'Outfit', sans-serif;
            background-color: #000000;
            color: white;
            overflow-x: hidden;
        }

        /* Animated Background Gradient */
        .gradient-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background: radial-gradient(circle at 15% 50%, rgba(76, 29, 149, 0.4), transparent 25%),
                        radial-gradient(circle at 85% 30%, rgba(59, 130, 246, 0.4), transparent 25%),
                        radial-gradient(circle at 50% 80%, rgba(236, 72, 153, 0.2), transparent 40%);
            animation: gradientMove 15s ease-in-out infinite alternate;
        }

        @keyframes gradientMove {
            0% { transform: scale(1); }
            100% { transform: scale(1.1); }
        }

        /* Glassmorphism Card */
        .glass-card {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(16px);
            -webkit-backdrop-filter: blur(16px);
            border: 1px solid rgba(255, 255, 255, 0.05);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            display: flex;
            flex-direction: column;
            text-decoration: none;
            height: 100%; /* Ensure uniform height in grid */
        }

        .glass-card:hover {
            background: rgba(255, 255, 255, 0.08);
            border-color: rgba(255, 255, 255, 0.2);
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
        }

        /* Transparent Button */
        .btn-transparent {
            background: transparent;
            border: 1px solid rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(4px);
            transition: all 0.3s ease;
        }

        .btn-transparent:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.6);
            transform: scale(1.05);
        }

        /* Neon Glow Text */
        .text-glow {
            text-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
        }

        .category-title {
            background: linear-gradient(to right, #fff, #94a3b8);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* Active Filter Button */
        .filter-btn.active {
            background-color: #a855f7; /* Purple 500 */
            color: white;
            border-color: #c084fcd0;
            transform: scale(1.05);
        }

        .logo-img {
            filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.2));
            transition: transform 0.3s ease;
        }
        .glass-card:hover .logo-img {
            transform: scale(1.1);
        }
        
        /* Ensure the sticky filter section stays right below the navbar */
        .sticky-filter {
            top: 4rem; /* Adjusted from top-20 to top-16 (64px) to stick right under the navbar */
        }
    </style>
</head>
