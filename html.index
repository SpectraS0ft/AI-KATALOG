            { id: "suno", name: "Suno AI", url: "https://suno.ai", logoDomain: "suno.ai", description: "Matndan professional darajadagi qo'shiqlar (vokal va musiqa) yaratish.", category: "Musiqa Generatsiyasi", tags: ["music", "image_video"] },
        ];

        // Custom order definitions for specific tags
        const toolOrder = {
            exams: ["Google Gemini (Pro/Flash)", "ChatGPT (5.2/5)", "DeepSeek (Latest)", "Perplexity"], 
            homework: ["Google Gemini (Pro/Flash)", "ChatGPT (5.2/5)", "Google NotebookLM", "Perplexity"], 
            programming: ["Google Gemini (Pro/Flash)", "ChatGPT (5.2/5)", "Claude", "Grok", "DeepSeek (Latest)", "Microsoft Copilot", "Qwen", "Blackbox AI", "Replit"], 
            project: ["ChatGPT (5.2/5)", "Claude", "Google Gemini (Pro/Flash)", "DeepAI", "Microsoft Copilot", "Perplexity", "Replit", "Canva Image", "Google NotebookLM"],
            image_video: ["Google Gemini (Pro/Flash)", "Grok", "ChatGPT (5.2/5)"], 
            music: ["Suno AI"],
        };

        const toolsContainer = document.getElementById('tools-container');
        const searchInput = document.getElementById('search-input');
        const filterButtons = document.querySelectorAll('.filter-btn');
        const noResults = document.getElementById('no-results');

        let activeTag = 'all';

        // --- Core Rendering Function ---
        const renderTools = (tools) => {
            toolsContainer.innerHTML = '';
            
            if (tools.length === 0) {
                noResults.classList.remove('hidden');
                return;
            }
            noResults.classList.add('hidden');

            tools.forEach(tool => {
                const card = document.createElement('a');
                card.href = tool.url;
                card.target = "_blank";
                card.rel = "noopener noreferrer";
                card.className = "glass-card p-6 rounded-3xl group relative overflow-hidden";
                
                // Determine card color based on category/tag for visual variety
                let hoverColor = 'hover:text-purple-400';
                if (tool.category.includes('Matnli AI') || tool.category.includes('O\'quv') || tool.category.includes('Dasturlash')) hoverColor = 'hover:text-blue-400';
                else if (tool.category.includes('Tasvir')) hoverColor = 'hover:text-pink-400';
                else if (tool.category.includes('Video')) hoverColor = 'hover:text-red-400';
                else if (tool.category.includes('Musiqa')) hoverColor = 'hover:text-lime-400'; // New color for music

                card.innerHTML = `
                    <div class="absolute top-0 right-0 p-4 opacity-50">
                        <!-- External Link Icon -->
                        <svg class="w-6 h-6 text-gray-400 group-hover:text-white group-hover:rotate-45 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
                    </div>
                    <img src="https://www.google.com/s2/favicons?sz=128&domain=${tool.logoDomain}" alt="${tool.name} Logo" 
                         class="w-12 h-12 rounded-xl mb-4 logo-img ${tool.logoDomain === 'openai.com' || tool.logoDomain === 'claude.ai' ? 'bg-white p-1' : ''}">
                    <h3 class="text-xl font-bold mb-1 ${hoverColor} transition-colors">${tool.name}</h3>
                    <p class="text-gray-400 text-xs leading-normal">${tool.description}</p>
                    <p class="mt-2 text-[10px] uppercase text-purple-300/50">${tool.category}</p>
                `;
                toolsContainer.appendChild(card);
            });
        };

        // --- Filtering and Sorting Logic ---
        const filterAndSortTools = () => {
            const searchTerm = searchInput.value.toLowerCase().trim();
            
            let filteredTools = toolsData.filter(tool => {
                const matchesSearch = tool.name.toLowerCase().includes(searchTerm) || 
                                      tool.description.toLowerCase().includes(searchTerm) ||
                                      tool.category.toLowerCase().includes(searchTerm);
